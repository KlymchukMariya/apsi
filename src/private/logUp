<script>
    function sendLogUp() {
        var obj = {
            email: document.getElementById('email').value
            , imie: document.getElementById('name').value
            , nazwisko: document.getElementById('lastname').value
            , haslo: document.getElementById('password').value
        };
        $.ajax({
            type: "POST",
            //url:
            , dataType: 'json',
            data: JSON.stringify(obj)
            , success: function (data) {
                if (data.error == 0) {
                    alert('Jestesz zalogowany! Potwierdz swoj e-mail');
                    window.location.href = 'Logowanie.html';
                }
                else if (data.error != 0) {
                    alert('Something is wrong');
                }
            }
            , complete: function () {
                console.log("COMPLETED");
            }
            , error: function () {
                console.log("WystÄ…piÅ‚ bÅ‚Ä…d w poÅ‚Ä…czeniu ðŸ˜ž");
            }
        });
    }
</script>

